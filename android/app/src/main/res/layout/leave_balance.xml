<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Leave Balance"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtCasualLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casual Leave: "/>

    <TextView
        android:id="@+id/txtCasualSick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sick Leave:"/>
    <TextView
        android:id="@+id/txtCasualPrivilege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privilege Leave:"/>
    <Button
        android:id="@+id/btnApplyLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply leave"/>
    <!-- new activity open, form (select type of leave , to date and from date, number of leaves, submit-->
    <!--API: fetch all leaves of emp, check for available leaves, valid to okay insert it , else false flag -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show leave status"/>
</LinearLayout>